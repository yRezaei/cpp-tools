{
	"name": "c++-tools",
	"displayName": "c++-tools",
	"description": "Helper tools for better productivity",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.create_cmake_project",
		"onCommand:extension.create_header",
		"onCommand:extension.create_class"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.create_cmake_project",
				"title": "c++: create cmake project"
			},
			{
				"command": "extension.create_class",
				"title": "c++: create class"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
